<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: gray;
        }
        .form-container {
            background-color: white;
            border: 2px solid black;
            border-radius: 15px;
            padding: 20px;
        }
        .center-image {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }
    </style>
    <script>
        function updateImage() {
            var imageUrl = document.getElementById('image-url').value;
            document.getElementById('car-image').src = imageUrl;
        }
    </script>
</head>
<body>
    <div class="container col-md-8 mt-3 form-container">
        <form action="/car/edit/{{car._id}}" method="post">
            <h1 class="text-dark text-center mb-4">Update car</h1>
            <div class="form-group">
                <label for="image">Image</label>
                <img id="car-image" src="{{car.image}}" alt="{{car.name}}" class="center-image" />
                <input id="image-url" class ="form-control"type ="url"name ="image"value="{{car.image}}"required onchange="updateImage()"> 
            </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" value="{{car.name}}" required minlength="3" maxlength="30">
        </div>
<div class="form-group mt-3">
        <label for="type" class="text-primary">Type</label>
        <input class="form-control" type="text" name="type" value="{{car.type}}" required>
    </div>
    <div class="form-group mt-3">
        <label for="age_range" class="text-primary">Age Range</label>
        <input class="form-control" type="text" name="age_range" value="{{car.age_range}}" required>
    </div>
    <div class="form-group mt-3">
        <label for="manufacturer" class="text-primary">Manufacturer</label>
        <input class="form-control" type="text" name="manufacturer" value="{{car.manufacturer}}" required>
    </div>
    <div class="form-group mt-3">
        <label for="price" class="text-primary">Price</label>
        <input class="form-control" type="number" name="price" value="{{car.price}}" required min="0">
    </div>
<div class="form-group mt-3">
            <label for="in_stock" class="text-primary">In Stock</label>
            <br>
            <input type ="radio" name ="in_stock" value ="true" {{#if car.in_stock}}checked{{/if}}> Yes
            <input type ="radio" name ="in_stock" value ="false" {{#unless car.in_stock}}checked{{/unless}}> No
        </div>
<div class="form-group mt-3 mb-3 text-center">
        <input class="btn btn-primary" type="submit" value="Update">
        <input class="btn btn-success" type="reset" value="Clear">
        <a href="/car" class="btn btn-light btn-lg">Back</a>
    </div>
</form>
</div>
</body>
</html>