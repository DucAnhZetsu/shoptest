<style>
   body {
      background-color: gray;
   }
   .form-container {
      background-color: white;
      border: 2px solid black;
      border-radius: 15px;
      padding: 20px;
   }
   .form-group label {
      display: block;
      
      font-size: 1.2em; /* Adjust this value to change the size of the text */
   }
</style>

<div class="container col-md-8 mt-3 form-container">
    <form action="/employee/add" method="post">
        <h1 class="text-dark text-center mb-4">Add New Employee</h1>
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" required minlength="3" maxlength="30">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input class="form-control" type="number" name="age" min="0" max="99">
        </div>
        <div class="form-group">
            <label for="dob">Date of Birth</label>
            <input class="form-control" type="date" name="dob" id="" required>
        </div>
        <div class="form-group">
            <label for="gpa">GPA</label>
            <input class="form-control" type="number" name="gpa" min="0" max="10">
        </div>
        <div class="form-group">
            <label for ="gender">Gender</label>
            <br>
            <input type ="radio"name ="gender"value ="Male"> Male
            <input type ="radio"name ="gender"value ="Female"> Female
        </div>
        <div class ="form-group">
            <label for ="email">Email</label>
            <input class ="form-control"type ="email"name ="email"required>
        </div>
        <div class ="form-group">
            <label for ="image">Image URL</label>
            <input class ="form-control"type ="url"name ="image"required> 
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg mr-2">Add</button>
            <button type="reset" class="btn btn-secondary btn-lg">Clear</button>
            <a href="/employee" class="btn btn-light btn-lg">Back</a>
        </div>
    </form>
</div>

